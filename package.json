{
  "name": "docflow",
  "version": "0.1.0",
  "private": true,
  "description": "DocFlow â€” Real-time document processing platform",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build:libs": "pnpm --filter '@docflow/*' build",
    "dev:api": "pnpm build:libs && pnpm --filter api-gateway dev",
    "dev:worker": "pnpm build:libs && pnpm --filter worker dev",
    "dev:web": "pnpm --filter web dev",
    "dev:all": "pnpm build:libs && concurrently -n api,worker,web -c blue,green,yellow \"pnpm --filter api-gateway dev\" \"pnpm --filter worker dev\" \"pnpm --filter web dev\"",
    "build:api": "pnpm build:libs && pnpm --filter api-gateway build",
    "build:worker": "pnpm build:libs && pnpm --filter worker build",
    "build:web": "pnpm --filter web build",
    "build": "pnpm build:libs && pnpm -r --filter '!@docflow/*' build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "migration:generate": "pnpm --filter @docflow/database migration:generate",
    "migration:run": "pnpm --filter @docflow/database migration:run",
    "migration:revert": "pnpm --filter @docflow/database migration:revert",
    "migration:show": "pnpm --filter @docflow/database migration:show",
    "seed": "pnpm --filter @docflow/database seed"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  }
}
