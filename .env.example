# ─── PostgreSQL ───────────────────────────────────────────
# In production compose: use Docker service name "postgres"
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=docflow
POSTGRES_PASSWORD=docflow_secret
POSTGRES_DB=docflow

# ─── Redis ────────────────────────────────────────────────
# In production compose: use Docker service name "redis"
REDIS_HOST=localhost
REDIS_PORT=6379

# ─── API Gateway ──────────────────────────────────────────
API_GATEWAY_PORT=4000
API_GATEWAY_GRAPHQL_PATH=/graphql
API_GATEWAY_CORS_ORIGIN=http://localhost:3000

# ─── JWT ──────────────────────────────────────────────────
# ⚠️  MUST be changed in production — use a long random string (64+ chars)
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_EXPIRATION=3600

# ─── Worker (gRPC) ───────────────────────────────────────
# In production compose: use Docker service name "worker"
WORKER_GRPC_HOST=localhost
WORKER_GRPC_PORT=50051
WORKER_HTTP_PORT=50052

# ─── Web (Next.js) ───────────────────────────────────────
# In production: point through Nginx (http://localhost/api, ws://localhost)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ─── PgAdmin (dev only — not included in prod compose) ───
PGADMIN_DEFAULT_EMAIL=admin@docflow.dev
PGADMIN_DEFAULT_PASSWORD=admin

# ─── MinIO (S3-compatible object store) ───────────────
# In production compose: use Docker service name "minio"
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_secret
MINIO_BUCKET=docflow-documents
MINIO_USE_SSL=false

# ─── Upload limits ────────────────────────────
UPLOAD_MAX_FILE_SIZE_MB=50

# ─── Nginx (production only) ─────────────────
NGINX_PORT=80
