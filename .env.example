# ─── PostgreSQL ───────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=docflow
POSTGRES_PASSWORD=docflow_secret
POSTGRES_DB=docflow

# ─── Redis ────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ─── API Gateway ──────────────────────────────────────────
API_GATEWAY_PORT=4000
API_GATEWAY_GRAPHQL_PATH=/graphql
API_GATEWAY_CORS_ORIGIN=http://localhost:3000

# ─── JWT ──────────────────────────────────────────────────
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_EXPIRATION=3600

# ─── Worker (gRPC) ───────────────────────────────────────
WORKER_GRPC_HOST=localhost
WORKER_GRPC_PORT=50051
WORKER_HTTP_PORT=50052

# ─── Web (Next.js) ───────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ─── PgAdmin ─────────────────────────────────────────────
PGADMIN_DEFAULT_EMAIL=admin@docflow.local
PGADMIN_DEFAULT_PASSWORD=admin
